
{
    "compilerOptions": {
       "baseUrl":".",
       "lib": [
          "es6"
       ],
             "allowSyntheticDefaultImports": true,
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
             "resolveJsonModule": true,
             "esModuleInterop": true,
       "sourceMap": true,
    "forceConsistentCasingInFileNames": true
    },
      "include":[
         "src/**/*.ts"
     ],
     "exclude": [
         "node_modules"
     ]
 }